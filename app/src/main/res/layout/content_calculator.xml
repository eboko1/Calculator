<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fvi.at.ua.calculator.Calculator"
    tools:showIn="@layout/activity_calculator"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/background_light"
            android:gravity="bottom|right"
            android:text="0"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMinus"
            android:layout_toEndOf="@+id/button0"
            android:layout_toRightOf="@+id/button0"
            android:background="@android:color/holo_purple"
            android:onClick="onClickEquals"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button2"
            android:background="@android:color/holo_purple"
            android:onClick="onClickClear"
            android:text="c"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMinus"
            android:layout_toEndOf="@+id/buttonEquals"
            android:layout_toRightOf="@+id/buttonEquals"
            android:background="@android:color/holo_purple"
            android:onClick="onClickOperator"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMult"
            android:layout_toEndOf="@+id/button3"
            android:layout_toRightOf="@+id/button3"
            android:background="@android:color/holo_purple"
            android:onClick="onClickOperator"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/button9"
            android:layout_toRightOf="@+id/button9"
            android:background="@android:color/holo_purple"
            android:onClick="onClickOperator"
            android:text="รท"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonDiv"
            android:layout_toEndOf="@+id/button9"
            android:layout_toRightOf="@+id/button9"
            android:background="@android:color/holo_purple"
            android:onClick="onClickOperator"
            android:text="ั"
            android:textColor="@android:color/background_light"
            android:textSize="22dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/buttonClear"
            android:layout_toRightOf="@+id/buttonClear"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button4"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button5"
            android:layout_toEndOf="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button6"
            android:layout_toEndOf="@+id/button2"
            android:layout_toRightOf="@+id/button2"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button7"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button8"
            android:layout_toEndOf="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonDiv"
            android:layout_toEndOf="@+id/button5"
            android:layout_toRightOf="@+id/button5"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/button5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="7"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:background="@android:color/holo_purple"
            android:onClick="onClickNumber"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
